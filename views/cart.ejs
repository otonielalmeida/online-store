                        </div>
                        <% } %>
    </nav>
    <div class="listing_div">

        <% for (var i=0; i < prodObj.length; i++) { %>
            <div class="listing_tiles">

                <div class="img_div"><a class="text-decoration-none text-dark"
                        href="/Product/<%= prodObj[i]._id %>" style="font-weight:900;"><img
                            src="./img/<%= prodObj[i].image %>"></a></div>
                <div class="prod_list">
                    <p class="product_name">
                        <a class="text-decoration-none text-dark" href="/Product/<%= prodObj[i]._id %>"
                            style="font-weight:900;">
                            <%= prodObj[i].name %>
                        </a>
                    </p>
                </div>
                <div class="prod_list">
                    <h5 class="product_price">Price: R$<%= prodObj[i].price %>
                    </h5>
                </div>
                <h5 class="product_quantity">Quantity: <%= prodObj[i].description %>
                </h5>
                <div class="prod_list">
                    <p>Subtotal: R$<%= parseFloat(prodObj[i].description) * parseFloat(prodObj[i].price) %>
                    </p>
                </div>
                <div class="prod_list">
                    <button style="border:none ;"><a class="text-decoration-none text-white"
                            href="/cart/delete/<%= prodObj[i]._id %>"> <i style="color: crimson;" class="fa fa-close"
                                aria-hidden="true"></i></a></button>
                </div>
            </div>
            <hr>
            <% } %>
    </div>
</body>

</html>